@model IEnumerable<Maglobe.Web.Services.Models.MenuViewModel>

@{
    string title = (string) ViewData["Title"];
    if (title == "مگلوب") title = "خانه";
}
@if (Model != null && Model.Any())
{
    @foreach (var item in Model)
    {
        <li class="menu-item @(item.Title == title ? "active" : String.Empty)">
            <a href="@item.Url">@item.Title</a>
        </li>
    }
}